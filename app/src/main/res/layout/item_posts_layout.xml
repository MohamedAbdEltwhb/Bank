<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_m">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_et"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_posts_Like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_l"
            android:layout_marginTop="@dimen/dimens_l"
            android:background="@drawable/posts_like_btn"
            android:padding="@dimen/dimens_m"
            android:src="@drawable/ic_like_a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimens_m"
            android:background="@color/LightGrayColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_posts_Like_button" />

        <TextView
            android:id="@+id/Posts_item_TV_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dimens_m"
            android:layout_marginStart="@dimen/dimens_l"
            android:gravity="center_vertical"
            android:text="@string/the_way_of_disease_prevention"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="@dimen/m2"
            app:layout_constraintBottom_toBottomOf="@+id/item_posts_Like_button"
            app:layout_constraintEnd_toStartOf="@+id/item_posts_Like_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_posts_Like_button" />

        <ImageView
            android:id="@+id/Post_item_ImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_12xl"
            android:layout_marginBottom="@dimen/dimens_s"
            android:layout_marginEnd="@dimen/dimens_s"
            android:layout_marginStart="@dimen/dimens_s"
            android:layout_marginTop="@dimen/dimens_s"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>