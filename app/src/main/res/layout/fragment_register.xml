<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".ui.fragments.userCycle.RegisterFragment">

    <include
        android:id="@+id/Register_Page_toolbar"
        layout="@layout/custom_tool_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register_Page_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimens_xl"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Register_Fragment_TiL_Name"
                style="@style/AppTextInputLayoutStyle">
                <android.support.design.widget.TextInputEditText
                    style="@style/AppTextInputEditTextStyle"
                    android:hint="@string/register_input_name"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Register_Fragment_TiL_Email"
                style="@style/AppTextInputLayoutStyle">
                <android.support.design.widget.TextInputEditText
                    style="@style/AppTextInputEditTextStyle"
                    android:hint="@string/register_input_email"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Register_Fragment_TiL_BirthDate"
                style="@style/AppTextInputLayoutStyle">
                <android.support.design.widget.TextInputEditText
                    style="@style/AppTextInputEditTextStyle"
                    android:hint="@string/register_input_your_birth_date"
                    android:drawableEnd="@drawable/ic_pirth_date" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/Register_Fragment_Spinner_Blood_Type"
                android:layout_width="match_parent"
                android:background="@drawable/shape_et"
                android:layout_height="45dp"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dimens_l"
                android:singleLine="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Register_Fragment_TiL_Last_Blood_Donation"
                style="@style/AppTextInputLayoutStyle">
                <android.support.design.widget.TextInputEditText
                    style="@style/AppTextInputEditTextStyle"
                    android:hint="@string/register_input_last_date_for_blood_donation"
                    android:drawableEnd="@drawable/ic_pirth_date" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/Register_Fragment_Spinner_Governments"
                android:layout_width="match_parent"
                android:background="@drawable/shape_et"
                android:layout_height="45dp"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dimens_l"
                android:singleLine="true"/>

            <Spinner
                android:id="@+id/Register_Fragment_Spinner_Cities"
                android:layout_width="match_parent"
                android:background="@drawable/shape_et"
                android:layout_height="45dp"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dimens_l"
                android:singleLine="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Register_Fragment_TiL_Phone"
                style="@style/AppTextInputLayoutStyle">
                <android.support.design.widget.TextInputEditText
                    style="@style/AppTextInputEditTextStyle"
                    android:hint="@string/register_input_phone"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Register_Fragment_TiL_Password"
                style="@style/AppTextInputLayoutStyle">
                <android.support.design.widget.TextInputEditText
                    style="@style/AppTextInputEditTextStyle"
                    android:hint="@string/register_input_password"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Register_Fragment_TiL_Re_Password"
                style="@style/AppTextInputLayoutStyle">
                <android.support.design.widget.TextInputEditText
                    style="@style/AppTextInputEditTextStyle"
                    android:hint="@string/re_password"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/Register_fragment_Sign_up_btn"
                style="@style/AppButtonStyle"
                android:layout_marginTop="@dimen/dimens_m"
                android:text="@string/register_sign_up_button"
                android:background="@color/grayColor"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>


